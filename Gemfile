source "https://rubygems.org"

# For GitHub Pages
gem "github-pages", group: :jekyll_plugins

# Syntax highlighter
gem "rouge"

# If you have any plugins, put them here!
# github whitelist https://pages.github.com/versions/
group :jekyll_plugins do
  gem "jekyll-sitemap"
  gem "jekyll-seo-tag"
  # gem "jekyll-target-blank"
end

# Let github-pages select the compatible jekyll version
gem "jekyll"

# Ruby 3 upgrade require manual use of webrick
# I think this will fail on github pages, only needed locally?
gem "webrick"

gem "nokogiri", ">= 1.18.9"
gem "csv"
gem "bigdecimal"